<div class="post-preview col-xs-10  no-gutter">
    <p class="post-body"><%= best_in_place post, :body %></p>

    <p class="meta">
        <%= link_to "#{post.user.username}", user_path(post.user) %>
        <i class="link-spacer"></i>
        <%= time_ago_in_words post.created_at %> ago
        <%= link_to "Delete", destroy_post_path(post), method: 'delete', class: "btn btn-default", remote: true %>
    </p>
</div>

<div class=" col-xs-2  no-gutter">
    <%= image_tag post.user.avatar.url(:post), class: "user-icon", alt: "user-image" %>
</div>
