<%= form_for @user do |f| %>
  <h3> Sign up</h3>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Sign up', class: 'btn btn-default pull-left' %>
  </div>
<% end %>
